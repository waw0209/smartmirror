<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/act"
    android:onClick="mainClick">

    <TextView
        android:id="@+id/tv_WeatherInfo"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/tv_WeatherInfo"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:textSize="50sp" />


    <VideoView
        android:layout_width="wrap_content"
        android:id="@+id/videoView"
        android:layout_above="@+id/list"
        android:layout_centerHorizontal="true"
        android:layout_height="420sp"
        android:onClick="onClickButton" />

    <ImageView
        app:srcCompat="?attr/selectableItemBackground"
        android:id="@+id/imageView2"
        android:layout_width="200sp"
        android:layout_height="160sp"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/list"
        android:layout_centerHorizontal="true" />

    <WebView
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/imageView"
        android:id="@+id/web"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_height="300dp" />

    <ListView
        android:id="@+id/list"
        android:layout_above="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="350sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:background="@drawable/call"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/button"
            android:onClick="onClickButton" />

        <Button
            android:layout_marginRight="17dp"
            android:background="@drawable/gall"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:onClick="onClickButton" />

        <!--<Button-->
            <!--android:background="@drawable/icon_01"-->
            <!--android:layout_width="0sp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:scaleType="fitXY"-->
            <!--android:id="@+id/button5"-->
            <!--android:onClick="onClickButton" />-->



        <Button
            android:background="@drawable/play_button"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/button2"
            android:onClick="onClickButton" />

        <Button
        android:background="@drawable/kalendericon"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:id="@+id/button7"
        android:onClick="onClickButton" />

        <Button
            android:background="@drawable/icon_01"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:id="@+id/button5"
            android:onClick="onClickButton" />


        <Button
            android:background="@drawable/setting"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:id="@+id/button6"
            android:onClick="onClickButton" />

        <Button
            android:background="@drawable/home"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:id="@+id/button4"
            android:onClick="onClickButton" />

    </LinearLayout>

</RelativeLayout>
